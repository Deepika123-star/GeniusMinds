<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rel"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/contestbackground"
    android:layout_marginBottom="4dp"
    android:padding="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/lincontest"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contestname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/buttonbackground"
                    android:text="This is test Contest Name"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lintimer"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/lincontest"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:layout_weight="50"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@id/date"
                android:text="djfsdjfsjfdsfsf"/>
            <TextView
                android:id="@+id/date"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:text="12/07/2020"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/dummylin"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/lintimer"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/fill1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="50"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textSize="@dimen/_11sdp"
                android:background="#EFE8E8"/>
            <TextView
                android:id="@+id/fill2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="50"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textSize="@dimen/_11sdp"
                android:background="#EFE8E8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/spot"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/dummylin"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/remainspot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimary"
                android:text=""/>
            <TextView
                android:id="@+id/totalspot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimary"
                android:text=""/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_prize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spot"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"
                android:padding="@dimen/_5sdp"
                android:text="Total Prize Money - "
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="100"
            android:id="@+id/lindetails"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_prize"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="43"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join for Virat Kohli"
                    android:id="@+id/team1"
                    android:textStyle="bold"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/contesttext"

                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Fee : 200"
                    android:id="@+id/fteamfee"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use Bonus : 200"
                    android:id="@+id/fteambonus"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prize Money : 200"
                    android:id="@+id/fteamwin"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorPrimary"/>



                <com.skydoves.elasticviews.ElasticButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="PRIZE BREAK UP"
                    android:id="@+id/btn_prizeBreakUp1"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_11sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:background="@drawable/textshapes"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="14"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="43"
                android:orientation="vertical"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join for Team 2"
                    android:id="@+id/team2"
                    android:background="@drawable/contesttext"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="end"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Fee : 200"
                    android:id="@+id/steamfee"
                    android:layout_marginTop="10dp"

                    android:layout_gravity="end"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorblue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use Bonus : 200"
                    android:id="@+id/steambonus"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorblue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prize Money : 200"
                    android:id="@+id/steamwin"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorblue"/>


                <com.skydoves.elasticviews.ElasticButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="PRIZE BREAK UP"
                    android:id="@+id/btn_prizeBreakUp2"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_gravity="end"

                    android:background="@drawable/textshapes"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_below="@id/lindetails"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/legerboard"
                android:layout_width="wrap_content"
                android:paddingLeft="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:paddingRight="40dp"
                android:background="@drawable/buttonbackground"
                android:clickable="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
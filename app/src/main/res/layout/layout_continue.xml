<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/cshape">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_cPercent"
                        android:text="i"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/tv_playerImag"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/profiles"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bow"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/_3sdp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:background="@color/gary_light"
                    android:text="bo-w"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/tv_wk"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/_3sdp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:background="@color/light_gray"
                    android:text="wk"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_playerNameContinue"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Q Kock"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_pointsContinue"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="54"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/greyy"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/cshape">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_caption"
                    android:text="c"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_captionPoints"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="1.03%"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/greyy"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="end"
                    android:background="@drawable/cshape">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_viceCaption"
                        android:text="vc"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_viceCaptionPoints"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/roboto"
                    android:text="1.4%"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/greyy"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/light_gray"/>
    </LinearLayout>

</RelativeLayout>
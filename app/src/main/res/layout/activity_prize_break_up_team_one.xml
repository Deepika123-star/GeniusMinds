<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contest.PrizeBreakUpTeamOneActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/neet"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:padding="10dp"
            android:id="@+id/line1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_backMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:tint="@color/white"
                android:src="@drawable/ic_baseline_keyboard_backspace_24">
            </ImageView>

            <TextView
                android:id="@+id/tv_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIZE BREAKUP DETAIL"
                android:visibility="visible"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_margin="@dimen/_7sdp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/neet"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Winning Amount : "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userWinningAmount"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry Fee Refferal Commission : "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_EntryFeeReferalCommission"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winning Amount Refferal Commission : "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_WinningAmountReferalCommssions"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack"
            />
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
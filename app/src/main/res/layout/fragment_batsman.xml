<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.BatsmanFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_points"
            android:textStyle="bold"
            android:text="Select 1-4 Batters"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_7sdp"
            android:background="@color/light_gray"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_serialNumber"
                    android:textStyle="bold"
                    android:text="Filters"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tv_serialNumber1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:src="@drawable/baseline_sort_24"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bettingName"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Selected by"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_entryFee"
                    android:textStyle="bold"
                    android:text="POINTS"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rate"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:text="Credit"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_batsman"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utills.Download">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New update is available and you are using old version so please download new version of app rom below button"
            android:padding="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/btnProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download App"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonbackground"
            android:textColor="@color/colorWhite"/>

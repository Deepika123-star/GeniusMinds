<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".utills.UserLoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/buttonbackground"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    android:text="User Login"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/extratext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shadowbackground"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:editable="true"
                        android:fontFamily="@font/roboto"
                        android:hint="Enter your email or Mobile"
                        android:inputType="textEmailAddress"
                        android:outlineAmbientShadowColor="@color/colorWhite"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shadowbackground"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:editable="true"
                        android:fontFamily="@font/roboto"

                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/third"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <Button
                        android:id="@+id/Login"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/password"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/buttonbackground"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:text="Sign In"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonbackground"
                    android:clickable="true"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Forget Password"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/buttonbackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="Don't have an account then Register"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>